<UserControl x:Class="Statistics.UserInterface.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Statistics.UserInterface"
             xmlns:foundation="clr-namespace:Zeiss.Semi.Mask.Foundation.Common.UserInterface.Contracts.Interactivity;assembly=Zeiss.Semi.Mask.Foundation.Common.UserInterface.Contracts"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             Background="Gray"
             d:DesignHeight="450" d:DesignWidth="800">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <foundation:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Statistics</TextBlock>
    </Grid>
</UserControl>
